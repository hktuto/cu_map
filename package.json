{
  "name": "vite-vue-electron",
  "author": "your-name",
  "version": "0.0.0",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder"
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@vue/apollo-components": "^4.0.0-alpha.16",
    "@vue/apollo-composable": "^4.0.0-alpha.16",
    "@vue/apollo-option": "^4.0.0-alpha.16",
    "animejs": "^3.2.1",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "graphql": "^16.2.0",
    "graphql-tag": "^2.12.6",
    "pinia": "^2.0.2",
    "vite-plugin-pages": "^0.18.2",
    "vue": "3.2",
    "vue-apollo": "^3.1.0",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/animejs": "^3.1.4",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.0.5",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "sass": "^1.43.4",
    "scss": "^0.2.4",
    "typescript": "^4.3.2",
    "unplugin-vue-components": "^0.17.0",
    "vite": "^2.4.4",
    "vite-plugin-vue-svg": "^0.1.0",
    "vite-svg-loader": "^3.0.0",
    "vue-svg-loader": "^0.17.0-beta.2",
    "vue-tsc": "^0.2.2",
    "wait-on": "^6.0.0"
  },
  "build": {
    "asar": false,
    "appId": "com.my-website.my-app",
    "productName": "MyApp",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
